<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="buttonMainMenuStyle" parent="@style/buttonBoldStyle">
        <item name="android:background">@drawable/mainbuttongreen</item>
    </style>

    <style name="game_finished_footer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.1</item>
    </style>

    <style name="buttonBoldStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="button_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
    </style>

    <style name="solid_button_text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallTextStyle" parent="@android:style/TextAppearance.Small"></style>

    <style name="game_finished_number_text" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#a7c736</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="classicHeaderText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonAndButtonText" parent="@style/button_text">
        <item name="android:background">@drawable/mainbuttongreen</item>
    </style>

    <style name="SidebarSmallTextViewStyle" parent="@style/button_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center_horizontal|top</item>
        <item name="android:layout_weight">0.4</item>
    </style>

    <style name="AnswersButtonStyle" parent="@style/button_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:background">@drawable/mainbuttonyellow</item>
        <item name="android:text">@string/kraunama</item>
    </style>

    <style name="SidebarBigTextViewStyle" parent="@style/button_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.65</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="Theme.Riestainis.FullScreen.NoTitleBar" parent="@style/Theme.Riestainis.FullScreen">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Riestainis.FullScreen" parent="@style/Theme.Riestainis">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="searchViewSearchIcon">@drawable/ic_search</item>
        <item name="searchViewCloseIcon">@drawable/ic_remove</item>
        <item name="actionModeShareDrawable">@drawable/ic_action_share</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>